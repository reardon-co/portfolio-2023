---
const { className, toResume } = Astro.props;
---

<button class:list={[className, toResume && "resume-button"]} class={className}>
  <slot />
</button>

<style>
  button {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    border: 1px solid #d8cced;
    background: linear-gradient(
      180deg,
      rgba(60, 8, 126, 0) 0%,
      rgba(192, 102, 255, 0.52) 100%
    );
    box-shadow: 0px 0px 12px 0px #c066ff inset;
    color: white;
    font-family: Inter;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    border-radius: 8px;
    padding: 0.25rem 0.75rem;
    gap: 0.625rem;
    font-size: 0.75rem;
    transition: box-shadow 0.25s ease-in-out;
  }

  @media only screen and (min-width: 600px) {
    button {
      border-radius: 12px;
      padding: 0.5rem 1rem;
      font-size: 1rem;
    }
  }

  @media only screen and (min-width: 992px) {
    button {
      padding: 0.5rem 1.25rem;
      font-size: 1.25rem;
    }
  }

  button:hover {
    box-shadow: 0px 0px 24px 0px #c066ff inset;
  }
</style>

<script>
  const button = document.querySelector(".resume-button");
  button?.addEventListener("click", () => {
    location.href = "/resume/";
  });
</script>
