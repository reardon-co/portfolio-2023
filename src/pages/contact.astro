---
import Card from "../components/Card.astro";
import SilverText from "../components/SilverText.astro";
import SubtitleText from "../components/SubtitleText.astro";
import BasicPageLayout from "../layouts/BasicPageLayout.astro";
import Button from "../components/Button.astro";
---

<BasicPageLayout title="Contact">
  <SilverText>Contact</SilverText>
  <SubtitleText isCenter>Feel free to reach out</SubtitleText>
  <div class="card-wrapper">
    <Card>
      <div slot="desc">
        <div class="form-wrapper">
          <form
            class="my-form"
            id="contact-form"
            data-netlify="true"
            name="contact"
          >
            <div class="contact">
              <label for="name">Name/Company</label>
              <input type="text" id="name" />

              <label for="email">Email Address</label>
              <input type="email" id="email" />
            </div>
            <div class="message">
              <label for="msg">Message</label>
              <textarea id="msg" placeholder="Start writing here" rows="4"
              ></textarea>
            </div>
          </form>
          <button type="submit" class="submit-button" form="contact-form">
            Submit
          </button>
        </div>
      </div>
    </Card>
  </div>
</BasicPageLayout>

<style>
  * {
    box-sizing: border-box;
  }

  .form-wrapper {
    padding: 0.5rem;
  }

  .card-wrapper {
    width: 90%;
    margin: auto;
    margin-top: 2rem;
  }
  .my-form {
    display: flex;
    flex-direction: column;
    border-radius: 12px;
  }
  .message {
    display: flex;
    flex-direction: column;
    order: 2;
  }
  .message > textarea {
    flex: 1;
    min-width: 18em;
    width: 100%;
    padding: 1rem;
    margin-bottom: 1rem;
    background: radial-gradient(
        97.14% 50% at 50% 0%,
        #6b32d4 0%,
        rgba(0, 0, 0, 0) 100%
      ),
      radial-gradient(
        98.77% 100% at 50% 0%,
        rgba(192, 102, 255, 0) 69.27%,
        rgba(215, 102, 255, 0.19) 100%
      );
    border: 1px solid rgba(201, 181, 237, 0.19);
    color: white;
  }
  .contact {
    flex: 1;
    order: 1;
  }
  .contact input {
    width: 100%;
    padding: 1rem;
    margin-bottom: 1rem;
    background: radial-gradient(
        97.14% 50% at 50% 0%,
        #6b32d4 0%,
        rgba(0, 0, 0, 0) 100%
      ),
      radial-gradient(
        98.77% 100% at 50% 0%,
        rgba(192, 102, 255, 0) 69.27%,
        rgba(215, 102, 255, 0.19) 100%
      );
    border: 1px solid rgba(201, 181, 237, 0.19);
    color: white;
  }

  .message > textarea::placeholder {
    color: #a073f4;
    opacity: 1;
  }

  .message > textarea:-ms-input-placeholder {
    color: #a073f4;
  }

  .message > textarea::-ms-input-placeholder {
    color: #a073f4;
  }

  @media only screen and (min-width: 600px) {
    .form-wrapper {
      padding: 2rem;
    }
    .my-form {
      flex-direction: row;
    }

    .contact {
      margin-right: 2em;
    }
  }

  @media only screen and (min-width: 992px) {
    .card-wrapper {
      width: 50%;
    }
  }

  /* Copying Button styles over */
  button {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    border: 1px solid #d8cced;
    background: linear-gradient(
      180deg,
      rgba(60, 8, 126, 0) 0%,
      rgba(192, 102, 255, 0.52) 100%
    );
    box-shadow: 0px 0px 12px 0px #c066ff inset;
    color: white;
    font-family: Inter, sans-serif;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    border-radius: 8px;
    padding: 0.25rem 0.75rem;
    gap: 0.625rem;
    font-size: 0.75rem;
    transition: box-shadow 0.25s ease-in-out;
  }

  @media only screen and (min-width: 600px) {
    button {
      border-radius: 12px;
      padding: 0.5rem 1rem;
      font-size: 1rem;
    }
  }

  @media only screen and (min-width: 992px) {
    button {
      padding: 0.5rem 1.25rem;
      font-size: 1.25rem;
    }
  }

  button:hover {
    box-shadow: 0px 0px 24px 0px #c066ff inset;
  }
</style>
